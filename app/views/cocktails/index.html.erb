  </a>
</div>

<div class="row p-5"``>
  <% @cocktails.each do |cocktail| %>
  <div class="card bg-dark text-white col-4">
    <img class="card-img" src="https://image.freepik.com/free-photo/classic-dry-cocktail-with-olives-black-background-copy-space_123827-12236.jpg" alt="Card image">
    <div class="card-img-overlay">
      <h5 class="card-title"><%= cocktail.name %></h5>
      <p class="card-text">
        <% cocktail.doses.each do |dose| %>
              <%= dose.ingredient.name %>
              (<%= dose.description %>)
          <% end %>
      </p>
    </div>
  </div>
  <% end %>
</div>