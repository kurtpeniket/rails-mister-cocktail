  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://image.freepik.com/free-photo/classic-dry-cocktail-with-olives-black-background-copy-space_123827-12236.jpg" alt="First slide">
      <div class="carousel-caption d-md-block">
        <h5>Caption Heading</h5>
        <p>Paragraph text here..</p>
      </div>
    </div>

    <div class="carousel-item">
      <img class="d-block w-100" src="https://i.insider.com/5c2f4534ad9571412a2cb0c3?width=1067&format=jpeg" alt="Second slide">
      <div class="carousel-caption d-md-block">
        <h5>Caption Heading</h5>
        <p>Paragraph text here..</p>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://ak.picdn.net/shutterstock/videos/3962302/thumb/1.jpg" alt="Third slide">
      <div class="carousel-caption d-md-block">
        <h5>Caption Heading</h5>
        <p>Paragraph text here..</p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
    <% @cocktails.each do |cocktail| %>
        <div class="card">
             <img class="card-img-top" src="https://image.freepik.com/free-photo/classic-dry-cocktail-with-olives-black-background-copy-space_123827-12236.jpg" alt="Card image cap">
             <div class="card-body">
                <h5 class="card-title"><%= cocktail.name %></h5>
                <p class="card-text">
                    <% cocktail.doses.each do |dose| %>
                        <%= dose.ingredient.name %>
                        (<%= dose.description %>)
                    <% end %>
                </p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    <% end %>
</div>